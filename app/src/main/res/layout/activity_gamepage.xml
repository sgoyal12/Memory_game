            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:id="@+id/iv_7"
            android:src="@drawable/imback"
            android:scaleType="centerInside"
            android:layout_weight="1"
            />
        <ImageView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:id="@+id/iv_8"
            android:src="@drawable/imback"
            android:scaleType="centerInside"
            android:layout_weight="1"
            />
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:weightSum="4"
        android:layout_weight="1">
        <ImageView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:id="@+id/iv_9"
            android:src="@drawable/imback"
            android:scaleType="centerInside"
