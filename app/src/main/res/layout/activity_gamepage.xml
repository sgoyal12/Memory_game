            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:id="@+id/iv_16"
            android:src="@drawable/imback"
            android:scaleType="centerInside"
            android:layout_weight="1"
            />
    </LinearLayout>

</LinearLayout>
